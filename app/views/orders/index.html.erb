  </head>

  <body id="page-top">


    <!-- Header -->
    <header class="masthead d-flex">
      <div class="container text-center my-auto">
  <p id="notice"><%= notice %></p>

<h1>Orders</h1>
<!-- a stock can have 0 or 1 order-->
<!-- if the stock does not have a order we cannot
display the order details as the application will crash-->
<% if @order == nil %>
<h3> This stock has no order yet. </h3>
<% else %>
<!-- the orders exists, let's display its details-->

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Category</th>
      <th>Qunatity</th>
      <th>Order_date</th>
      <th>Manager</th>  
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <tr>
        <td><%= @order.brand %></td>
        <td><%= @order.category %></td>
        <td><%= @order.qunatity %></td>
        <td><%= @order.order_date %></td>
        <td><%= @order.manager %></td>
        <td><%= link_to 'Show', stock_order_path(@stock, @order) %></td>
        <td><%= link_to'Edit', edit_stock_order_path(@stock, @order) %></td>
        <td><%= link_to'Destroy', stock_order_path(@stock, @order),method: :delete, data: { confirm:'Are you sure?'} %></td>
      </tr>
    </tbody>
  <h1>Listing Order for Stock 
    <%= @stock.brand %>
    <%= @stock.category %>
    <%= @stock.quantity %>
  </h1> 
</table>
<% end %>

<br>

<%= link_to 'New Order', new_stock_order_path(@stock) %>
<%= link_to 'Back to stock', @stock %>
 <% if user_signed_in? %>
  <div>Signed in as... <%= current_user.email %>
  (<%= link_to'Sign out', destroy_user_session_path,:method => :delete%>)</div>
  <% else %>
  <%= link_to'Register', new_user_registration_path %> or
  <%= link_to'Sign in', new_user_session_path %>
  <% end %>
  
      </div>

      <div class="overlay"></div>
    </header>


 



    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript -->
    <script src="https://blackrockdigital.github.io/startbootstrap-stylish-portfolio/vendor/jquery/jquery.min.js"></script>
    <script src="https://blackrockdigital.github.io/startbootstrap-stylish-portfolio/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

